<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00ffff"
    android:orientation="vertical"
    tools:context="com.example.administrator.quizzer.Main8Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/lay">

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="WHAT IS THE SURFACE TEMPERATURE OF THE SUN?"
        android:textSize="30sp"
        android:textColor="#00ffff" />

    <RadioGroup
        android:id="@+id/radio_gp"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RadioButton
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="score"
            android:id="@+id/radio_bt1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200,000deg C" />

        <RadioButton
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="score"
            android:id="@+id/radio_bt82"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6,000deg C" />

        <RadioButton
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="score"
            android:id="@+id/radio_bt3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15,000deg C" />

        <RadioButton
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="score"
            android:id="@+id/radio_bt4"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,000,000deg C" />

    </RadioGroup>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET THE QUIZ"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:onClick="reset"
        android:textStyle="bold" />

</LinearLayout>
