<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient4"
    android:orientation="vertical"
    tools:context="com.example.administrator.quizzer.Main4Activity">

    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/mo"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="WHO AMONGST THESE MEN IS THE FIRST PHILOSOPHER?"
        android:textSize="30sp"
        android:textColor="#ffffff" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:background="@drawable/mo"
        android:layout_weight="3"
        android:id="@+id/radio_gp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RadioButton
            android:background="@drawable/button"
            android:onClick="score"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radio_bt1"
            android:layout_height="wrap_content"
            android:text="SOCRATES" />

        <RadioButton
            android:background="@drawable/button"
            android:onClick="score"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radio_bt2"
            android:layout_height="wrap_content"
            android:text="ARISTOTLE" />

        <RadioButton
            android:background="@drawable/button"
            android:onClick="score"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radio_bt3"
            android:layout_height="wrap_content"
            android:text="IMHOTEP" />

        <RadioButton
            android:background="@drawable/button"
            android:onClick="score"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radio_bt44"
            android:layout_height="wrap_content"
            android:text="THALES" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:onClick="start"
        android:textStyle="bold" />

</LinearLayout>
